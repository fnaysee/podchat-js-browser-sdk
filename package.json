{
  "name": "podchat-browser",
  "version": "12.5.2-snapshot.11",
  "description": "Javascript SDK to use POD's Chat Service - Browser Only",
  "main": "./dist/node/chat.js",
  "type": "module",
  "scripts": {
    "test": "mocha --reporter spec --exit",
    "publish:snapshot": "npm run version:snapshot && npm publish --tag snapshot",
    "version:snapshot": "npm version prerelease --preid snapshot",
    "publish:release": "npm run version:release && npm publish",
    "version:release": "npm version 12.5.2",
    "build:browser": "browserify -t [ babelify ] src/chat.js > dist/podchat-browser-bundle.js",
    "build:npm": "babel src -d dist/node --copy-files",
    "build": "npm run build:browser && npm run build:npm",
    "watch": "npm-watch build"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,html",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FanapSoft/pod-chat-browser-js-sdk.git"
  },
  "keywords": [
    "POD",
    "Chat",
    "Fanap",
    "Dirana"
  ],
  "engines": {
    "node": ">=4.2.4"
  },
  "author": "Masoud Amjadi <masoudmanson@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FanapSoft/pod-chat-browser-js-sdk/issues"
  },
  "homepage": "https://github.com/FanapSoft/pod-chat-browser-js-sdk#readme",
  "dependencies": {
    "@sentry/browser": "^6.11.0",
    "@sentry/tracing": "^6.11.0",
    "crypto-js": "^4.0.0",
    "dexie": "^2.0.4",
    "dompurify": "^2.3.3",
    "faker": "^5.5.3",
    "kurento-utils": "^6.16.0",
    "node-rsa": "^1.1.1",
    "podasync-ws-only": "^2.7.10-snapshot.1",
    "query-string": "^6.8.1",
    "webrtc-adapter": "^8.0.0"
  },
  "devDependencies": {
    "mocha": "^8.1.1",
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.16.11",
    "babelify": "^10.0.0",
    "watchify": "^4.0.0",
    "npm-watch": "^0.11.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  }
}
